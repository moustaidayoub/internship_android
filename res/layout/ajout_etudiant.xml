<?xml version="1.0" encoding="utf-8"?>
<ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical" >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
     <TextView
     android:id="@+id/ajout_titre"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginTop="5sp"
     android:layout_centerHorizontal="true"
     android:text="Ajout d'un étudiant"
     android:layout_marginBottom="10sp"
     android:textColor="#2C75FF"
     android:textSize="18sp"
     android:textStyle="bold"
      android:typeface="serif" />
     
       <EditText
         android:id="@+id/cne"
         android:layout_width="240sp" 
         android:layout_height="40sp"
         android:hint="CNE"
         android:layout_marginBottom="5sp"
         android:layout_below="@id/ajout_titre"
         android:layout_centerHorizontal="true"
         android:inputType="number"
         android:maxLines="1"
         />
       <EditText
         android:id="@+id/nom"
         android:layout_width="240sp" 
         android:layout_height="40sp"
         android:hint="Nom"
         android:layout_marginBottom="5sp"
         android:layout_below="@id/cne"
         android:layout_centerHorizontal="true"
         android:maxLines="1"
         />
         <EditText
         android:id="@+id/prenom"
         android:layout_width="240sp" 
         android:layout_height="40sp"
         android:hint="Prenom"
         android:layout_marginBottom="5sp"
         android:layout_below="@id/nom"
         android:layout_centerHorizontal="true"
         android:maxLines="1"
         />
           <EditText
         android:id="@+id/motdepasse1"
         android:layout_width="240sp" 
         android:layout_height="40sp"
         android:hint="Mot de passe"
         android:layout_marginBottom="5sp"
         android:layout_below="@id/prenom"
         android:layout_centerHorizontal="true"
         android:inputType="textPassword"
         android:maxLines="1"
         />
           <EditText
         android:id="@+id/email"
         android:layout_width="240sp" 
         android:layout_height="40sp"
         android:hint="Email"
         android:layout_marginBottom="5sp"
         android:layout_below="@id/motdepasse1"
         android:layout_centerHorizontal="true"
         android:inputType="textEmailAddress"
         android:maxLines="1"
         />
             <EditText
         android:id="@+id/tel"
         android:layout_width="240sp" 
         android:layout_height="40sp"
         android:hint="Tél"
         android:layout_marginBottom="5sp"
         android:layout_below="@id/email"
         android:layout_centerHorizontal="true"
         android:inputType="number"
         android:maxLines="1"
         />
               <EditText
         android:id="@+id/date_naissance"
         android:layout_width="240sp" 
         android:layout_height="40sp"
         android:hint="Date naissance"
         android:layout_marginBottom="5sp"
         android:layout_below="@id/tel"
         android:layout_centerHorizontal="true"
         android:inputType="date"
         android:maxLines="1"
         />

 <Button 
         android:id="@+id/valider"
         android:layout_width="100sp"
         android:layout_height="30sp"
         android:text="Valider"
         android:gravity="center"
         android:textColor="#FFFFFF"
         android:layout_centerHorizontal="true"
         android:background="@drawable/connexion_btn"
         android:layout_below="@id/date_naissance"
         />


                   
           

</RelativeLayout>
</ScrollView>